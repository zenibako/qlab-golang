module qlab.osc.cue

import "osc.pkl"

class CueMessage extends osc.Message {
  useWorkspacePrefix = true
}

`/cue/{cue_number}/actionElapsed`: CueMessage = new {
  address = "/cue/{cue_number}/actionElapsed"
  permissions = new {
    view      = "read_only"
    edit      = "read_only"
    control   = "read_only"
    query     = "yes"
    increment = "no"
  }
}

`/cue/{cue_number}/actionRemaining`: CueMessage = new {
  address = "/cue/{cue_number}/actionRemaining"
  permissions = new {
    view    = "read_only"
    edit    = "read_only"
    control = "read_only"
    query   = "no"
  }
  example = """
    [
      67.890 // number of seconds
    ]
  """
}

`/cue/{cue_number}/go`: CueMessage = new {
  address = "/cue/{cue_number}/go"
  permissions = new {
    view    = "no"
    edit    = "no"
    control = "yes"
    query   = "no"
  }
}

`/cue/{cue_number}/stop`: CueMessage = new {
  address = "/cue/{cue_number}/stop"
  permissions = new {
    view    = "no"
    edit    = "yes"
    control = "yes"
    query   = "no"
  }
}

